package co

type Colors struct {
<% colors.forEach(function (color) { %> <%= color.name -%>     ColorFunc
<% }) %>
}

// Create a color utility function with a useColor property
func UseColors(useColor bool) Colors {
	if useColor {
		return Colors{<% colors.forEach(function (color) { %>
				<%= color.name %> : build<% if (color.replace) { %>WithReplace<% } %>(<%= color.open %>, <%= color.close %><% if (color.replace) { %>, <%- color.replace %><% } %>),<% }) %>
		}
	} else {
		return Colors{
			<% colors.forEach(function (color) { %><%= color.name %>:noop,
				<% }) %>
		}
	}
}

var colors = CreateColors();
<% colors.forEach(function (color) { %>
func <%= color.name %>(source string) string {
	return colors.<%= color.name %>(source)
}
<% }) %>
    